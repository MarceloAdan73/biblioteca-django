<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Biblioteca Digital · Gestiona tu conocimiento{% endblock %}</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            important: true,
            theme: {
                extend: {
                    fontFamily: {
                        'display': ['Playfair Display', 'Georgia', 'serif'],
                        'serif': ['Merriweather', 'Georgia', 'serif'],
                        'sans': ['Inter', 'system-ui', 'sans-serif'],
                    },
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                        }
                    }
                }
            }
        }
    </script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Merriweather:wght@300;400;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        body { font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1; -webkit-font-smoothing: antialiased; }
        .mobile-menu { transition: all 0.3s ease-in-out; }
        .book-card { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        .book-card:hover { transform: translateY(-2px); }
        .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
        .user-badge { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .premium-feature { border-left: 4px solid #3b82f6; }
    </style>
</head>
<body class="h-full bg-gradient-to-br from-gray-50 to-blue-50 dark:bg-gradient-to-br dark:from-gray-900 dark:to-gray-800 font-sans" x-data="{ mobileMenuOpen: false, darkMode: localStorage.getItem('darkMode') === 'true' }" x-init="$watch('darkMode', value => localStorage.setItem('darkMode', value))" :class="{ 'dark': darkMode }">
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 shadow-sm sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3">
                    <div class="bg-gradient-to-br from-primary-500 to-primary-600 p-2 rounded-lg">
                        <i class="fas fa-book text-white text-lg"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold bg-gradient-to-r from-gray-900 dark:from-gray-100 to-primary-600 dark:to-primary-300 bg-clip-text text-transparent">
                    <h1 class="text-xl font-bold text-gray-900 dark:text-gray-300">BibliotecaDigital</h1>
                        </h1>
                        <p class="hidden sm:block text-xs text-gray-500 dark:text-gray-400 font-medium">
                            {% if user.is_authenticated %}
                                Bienvenido, {{ user.username }}
                            {% else %}
                                Gestiona tu conocimiento
                            {% endif %}
                        </p>
                    </div>
                </div>

                <div class="hidden md:flex items-center space-x-6">
<button @click="darkMode = !darkMode" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 p-2 rounded-lg transition-colors">
    <i class="fas fa-moon" x-show="!darkMode"></i>
    <i class="fas fa-sun" x-show="darkMode"></i>
</button>
                    <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-300 font-medium transition-colors">Inicio</a>
                    <a href="/libros/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-300 font-medium transition-colors">Catálogo</a>
                    
                    <!-- IMPORTAR LIBROS - SOLO PARA USUARIOS LOGUEADOS -->
                    {% if user.is_authenticated %}
                        <a href="/importar-libros/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors flex items-center space-x-1">
                            <i class="fas fa-download text-sm"></i>
                            <span>Importar Libros</span>
                        </a>
                    {% endif %}
                    
                    <!-- VERIFICACION DE USUARIO AUTENTICADO -->
                    {% if user.is_authenticated %}
                    <div class="flex items-center space-x-4">
                        <!-- Badge de usuario premium -->
                        <div class="user-badge px-3 py-1 rounded-full text-white text-sm font-medium flex items-center space-x-2">
<div x-show="userDropdownOpen" @click.away="userDropdownOpen = false" class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 rounded-lg shadow-lg dark:shadow-gray-900/50 py-1 z-50 border border-gray-200 dark:border-gray-600">
    <a href="/profile/" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
        <i class="fas fa-user mr-2"></i>Mi Perfil
    </a>
    <a href="/my-books/" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
        <i class="fas fa-book mr-2"></i>Mis Libros
    </a>
    <div class="border-t border-gray-100 my-1"></div>
    <a href="/accounts/logout/" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
        <i class="fas fa-sign-out-alt mr-2"></i>Cerrar Sesión
    </a>
</div>
                            <i class="fas fa-crown text-yellow-300"></i>
                            <span>{{ user.username }}</span>
                        </div>
                        <a href="/accounts/logout/" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg font-medium transition-all flex items-center space-x-2">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Salir</span>
                        </a>
                    </div>
                    {% else %}
                    <div class="flex items-center space-x-3">
                        <a href="/accounts/login/" class="text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors">
                            Iniciar Sesion
                        </a>
                        <a href="/accounts/register/" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg font-medium transition-all flex items-center space-x-2">
                            <i class="fas fa-user-plus"></i>
                            <span>Registrarse</span>
                        </a>
                    </div>
                    {% endif %}
                </div>

                <div class="md:hidden">
                    <button type="button" @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-700 hover:text-primary-600 p-2 rounded-lg" aria-label="Abrir menú de navegación">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>

            <div x-show="mobileMenuOpen" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform -translate-y-2" x-transition:enter-end="opacity-100 transform translate-y-0" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100 transform translate-y-0" x-transition:leave-end="opacity-0 transform -translate-y-2" @click.away="mobileMenuOpen = false" class="md:hidden mobile-menu border-t border-gray-200 dark:border-gray-700 py-4 bg-white dark:bg-gray-800">
                <div class="space-y-4">
                    <a href="/" class="block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 font-medium py-2 border-l-4 border-primary-500 pl-4">
                        <i class="fas fa-home mr-3"></i>Inicio
                    </a>
                    <a href="/libros/" class="block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 font-medium py-2 border-l-4 border-primary-500 pl-4">
                        <i class="fas fa-book mr-3"></i>Catálogo
                    </a>
                    
                    <!-- IMPORTAR LIBROS EN MOVIL - SOLO LOGUEADOS -->
                    {% if user.is_authenticated %}
                    <a href="/importar-libros/" class="block text-gray-700 hover:text-primary-600 font-medium py-2 border-l-4 border-primary-500 pl-4 premium-feature">
                        <i class="fas fa-download mr-3"></i>Importar Libros
                    </a>
                    {% endif %}
                    
                    {% if user.is_authenticated %}
                    <div class="pt-4 border-t border-gray-200 space-y-2">
                        <div class="user-badge px-4 py-2 rounded-lg text-white font-medium flex items-center">
                            <i class="fas fa-crown text-yellow-300 mr-3"></i>
                            <span>Hola, {{ user.username }}</span>
                        </div>
                        <a href="/accounts/logout/" class="block w-full bg-gray-500 hover:bg-gray-600 text-white px-4 py-3 rounded-lg font-medium">
                            <i class="fas fa-sign-out-alt mr-3"></i>Cerrar Sesion
                        </a>
                    </div>
                    {% else %}
                    <div class="pt-4 border-t border-gray-200 space-y-2">
                        <a href="/accounts/login/" class="block w-full bg-primary-500 hover:bg-primary-600 text-white px-4 py-3 rounded-lg font-medium">
                            <i class="fas fa-user mr-3"></i>Iniciar Sesion
                        </a>
                        <a href="/accounts/register/" class="block w-full border border-primary-500 text-primary-600 hover:bg-primary-50 px-4 py-3 rounded-lg font-medium">
                            <i class="fas fa-user-plus mr-3"></i>Crear Cuenta
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-1 dark:bg-gray-900">
        {% block content %}
        {% endblock %}
    </main>

    <!-- FOOTER MEJORADO -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-16">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="md:col-span-2">
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="bg-primary-500 p-2 rounded-lg">
                            <i class="fas fa-book text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 dark:text-white">BibliotecaDigital</h3>
                            <p class="text-sm text-gray-600">
                                {% if user.is_authenticated %}
                                    Tu biblioteca personal · {{ user.username }}
                                {% else %}
                                    Tu portal al conocimiento infinito
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <p class="text-gray-600 dark:text-gray-300 text-sm max-w-md">
                        {% if user.is_authenticated %}
                            Explora, descubre y gestiona tu coleccion literaria personal. 
                            <span class="text-primary-600 font-medium">¡Tienes acceso completo!</span>
                        {% else %}
                            Plataforma moderna para gestion de bibliotecas. 
                            <a href="/accounts/register/" class="text-primary-600 hover:underline">Registrate</a> 
                            para desbloquear todas las funciones.
                        {% endif %}
                    </p>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-4">Navegacion</h4>
                    <ul class="space-y-2 text-sm"><li><a href="/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Inicio</a></li><li><a href="/libros/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Catálogo</a></li>{%if user.is_authenticated%}<li><a href="/importar-libros/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Importar Libros</a></li>{%endif%}</ul>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-4">Cuenta</h4>
                    <ul class="space-y-2 text-sm">{%if user.is_authenticated%}<li><span class="text-gray-600 dark:text-gray-400">Hola, {{ user.username }}</span></li><li><a href="/accounts/logout/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Cerrar Sesion</a></li>{%else%}<li><a href="/accounts/login/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Iniciar Sesion</a></li><li><a href="/accounts/register/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Registrarse</a></li>{%endif%}</ul>
                </div>
            </div>
            <div class="border-t border-gray-200 mt-8 pt-6 text-center">
                <p class="text-gray-500 dark:text-gray-400 text-sm">
                    &copy; 2024 BibliotecaDigital. 
                    {% if user.is_authenticated %}
                        <span class="text-primary-600">Sesion activa</span>
                    {% else %}
                        Desarrollado con Django + Tailwind CSS.
                    {% endif %}
                </p>
            </div>
        </div>
    </footer>

    <script>
        function bibliotecaSimulator() {
            return {
                searchQuery: '',
                books: [
                    {title: 'Cien años de soledad', author: 'Gabriel García Márquez', available: true},
                    {title: '1984', author: 'George Orwell', available: true},
                    {title: 'Orgullo y prejuicio', author: 'Jane Austen', available: false},
                    {title: 'La casa de los espíritus', author: 'Isabel Allende', available: true},
                    {title: 'El señor de los anillos', author: 'J.R.R. Tolkien', available: true},
                    {title: 'Crimen y castigo', author: 'Fiódor Dostoyevski', available: false}
                ],
                newBookTitle: '',
                newBookAuthor: '',
                showNotification: false,
                notificationMessage: '',
                
                get filteredBooks() {
                    if (!this.searchQuery) return this.books;
                    return this.books.filter(book => 
                        book.title.toLowerCase().includes(this.searchQuery.toLowerCase()) ||
                        book.author.toLowerCase().includes(this.searchQuery.toLowerCase())
                    );
                },
                
                get availableBooks() {
                    return this.books.filter(book => book.available);
                },
                
                addBook() {
                    if (this.newBookTitle && this.newBookAuthor) {
                        this.books.push({
                            title: this.newBookTitle,
                            author: this.newBookAuthor,
                            available: true
                        });
                        this.newBookTitle = '';
                        this.newBookAuthor = '';
                        this.showNotification('¡Libro agregado exitosamente!');
                    }
                },
                
                toggleAvailability(book) {
                    book.available = !book.available;
                    this.showNotification(`Estado actualizado: ${book.title}`);
                },
                
                showNotification(message) {
                    this.notificationMessage = message;
                    this.showNotification = true;
                    setTimeout(() => {
                        this.showNotification = false;
                    }, 3000);
                }
            }
        }
    </script>
\n</body>
</html>
